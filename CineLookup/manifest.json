{
  "manifest_version": 3,
  "name": "CineLookup",
  "version": "1.0",
  "description": "Right-click to search selected text across IMDb, Wikipedia, YouTube, Rotten Tomatoes, and TMDb",
  "author": "Umbra-Domini",
  "homepage_url": "https://github.com/Umbra-Domini",
  "permissions": ["contextMenus", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/search-16.png",
      "48": "icons/search-48.png",
      "128": "icons/search-128.png"
    }
  },
  "icons": {
    "16": "icons/search-16.png",
    "48": "icons/search-48.png",
    "128": "icons/search-128.png"
  }
}
